{
  "tasks" : {
    "compileJS" : [
      {
        "name" : "app-JS",
        "opts" : { "production" : false },
        "src" : "./src/js/index/main.js",
        "dest" : "./public/js/app/index",
        "enabled" : true
      }
    ],
    "compileCSS" : [
      {
        "name" : "app-CSS",
        "opts" : { },
        "src" : "./src/sass/**/*.scss",
        "dest" : "./public/style",
        "enabled" : true
      }
    ],
    "lintClient" : [
      {
        "name" : "app-ESLint",
        "opts" : { },
        "src" : "./src/**/*.js",
        "enabled" : true
      }
    ],
    "lintNode" : [
      {
        "name" : "node-ESLint",
        "opts" : { },
        "src" : [
          "./**/*.js",
          "!./node_modules/**",
          "!./public/**",
          "!./src/**/*.js",
          "!./docs/**"
        ],
        "enabled" : true
      }
    ],
    "document" : [
      {
        "name" : "document-client",
        "opts" : { },
        "src" : "src/js/",
        "dest" : "docs",
        "enabled" : true
      }
    ]
  }
}
